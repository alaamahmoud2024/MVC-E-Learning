            <input class="form-control" asp-for="Facebook" />
        </div>
        <div class="form-group">
            <label required> Linkedin Account :</label>
            <input class="form-control" asp-for="Linkedin" />
        </div>
        <div class="form-group">
            <label required> Iamge Account :</label>
            <input class="form-control" type="file" accept="image/*" asp-for="Image" />
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>

