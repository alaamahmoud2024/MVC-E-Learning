@model IEnumerable<CourseVM>
@{
    ViewData["Title"] = "Courses";
}

<div class="mt-3">
    <div class="col-10">
        <a asp-action="Create" class="btn btn-success mt-5">Add Course</a>
        <a asp-action="AssignToInstructor" class="btn btn-primary mt-5">Assign To Instructor</a>
    </div>
</div>

@if (Model.Any())
{
    <h1 class="mt-3">All Courses</h1>


    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td class="fw-bold bg-dark text-white text-center">Name</td>
                <td class="fw-bold bg-dark text-white text-center">OverView</td>
                <td class="fw-bold bg-dark text-white text-center">Price</td>
                <td class="fw-bold bg-dark text-white text-center">Topic</td>
                <td class="fw-bold bg-dark text-white text-center">Actions</td>
@*                 <td class="fw-bold bg-dark text-white text-center">Details</td>
                <td class="fw-bold bg-dark text-white text-center">edit</td>
                <td class="fw-bold bg-dark text-white text-center">Delete</td>
 *@         </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr class="text-center">

                    <td>@course.Name</td>
                    <td>@course.OverView</td>
                    <td>$ @course.Price</td>
                    <td>@course.Topic.Name</td>
                    <td>
                        <div class="dropdown fw-bold">
                            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Actions
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                                <a class="dropdown-item" asp-controller="Course" asp-action="Details" asp-route-id="@course.Id"><i class="fas fa-eye"></i> Details</a>
                                <a class="dropdown-item" asp-controller="Course" asp-action="Edit" asp-route-id="@course.Id"><i class="fas fa-edit"></i> Edit</a>
                                <a class="dropdown-item" asp-controller="Course" asp-action="Delete" asp-route-id="@course.Id"><i class="fas fa-trash"></i> Delete</a>
                                <a class="dropdown-item" asp-controller="Assignment" asp-action="Create" asp-route-courseId="@course.Id"><i class="fa fa-file"></i> Add Assignment</a>

                            </div>
                        </div>
                    </td>
@*                     <td><a asp-controller="Course" asp-action="Details" asp-route-id="@course.Id"><i class="fas fa-eye"></i></a></td>
                    <td><a asp-controller="Course" asp-action="edit" asp-route-id="@course.Id"><i class="fas fa-edit"></i></a></td>
                    <td><a asp-controller="Course" asp-action="Delete" asp-route-id="@course.Id"><i class="fas fa-trash"></i></a></td>
 *@                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning text-Center">
        <h1>No Courses</h1>
    </div>
}


