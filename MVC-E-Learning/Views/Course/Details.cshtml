@model CourseVM
@{
    ViewData["Title"] = "Details";
    var topics = ViewBag.Topics;
}
<div class="row">
	<div class="agileits-top">
        <div class="form-group">
            <label required> Course Name :</label>
            <input class="form-control" asp-for="Name" readonly/>
        </div>

        <div class="form-group">
            <label required> OverView :</label>
            <input class="form-control" asp-for="OverView" readonly />
        </div>

        <div class="form-group">
            <label required> Duration :</label>
            <input type="number" class="form-control" asp-for="Duration" readonly />
        </div>

        <div class="form-group">
            <label required> Lessons Number :</label>
            <input type="number" class="form-control" asp-for="Lessons" readonly />
        </div>

        <div class="form-group">
            <label required> Video Link :</label>
            <input type="url" class="form-control" asp-for="Videos" readonly />
        </div>

        <div class="form-group">
            <label required> Language :</label>
            <input class="form-control" asp-for="Language" readonly />
        </div>
        <div class="form-group">
            <label required> Price :</label>
            <input type="number" class="form-control" asp-for="Price" readonly />
        </div>

        <div class="form-group">
            <label required> Topic :</label>
            <select asp-for="TopicId" class="form-control">
                @foreach (var topic in topics)
                {
                    <option value="@topic.Id">@topic.Name</option>
                }
            </select>
        </div>
	</div>
</div>

<div class="mt-3">
	<a asp-action="Edit" class="btn btn-info" asp-route-id="@Model.Id">Edit</a>
	<a asp-action="Index" class="btn btn-warning">Back To List</a>
</div>
