@using BL.ViewModels
@model List<AssignmentVM>;

@{
    ViewData["Title"] = "Assignments";
}

@if (Model.Any())
{
    <h1 class="mt-3">All Assignments</h1>
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td class="fw-bold bg-dark text-white text-center">Assignment Name</td>
                <td class="fw-bold bg-dark text-white text-center">Course Name</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var ass in Model)
            {
                <tr class="text-center">

                    <td>@ass.Name</td>
                    <td>@ass.Course.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning text-Center">
        <h1>No Assignments</h1>
    </div>
}


