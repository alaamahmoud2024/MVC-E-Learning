@model IEnumerable<TopicVM>
@{
    ViewData["Title"] = "Topics";
}
<div class="mt-5">
    <div class="col-10">
        <a asp-action="Create" class="btn btn-success fw-bold">
            <i class="fa fa-plus"></i>
            Add Topic
        </a>
    </div>
</div>

@if (Model.Any())
{
    <h1 class="mt-3">All Topics</h1>


    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td class="fw-bold bg-dark text-white text-center">Name</td>
                @* <td class="fw-bold bg-dark text-white text-center">Details</td> *@
                <td class="fw-bold bg-dark text-white text-center">edit</td>
                <td class="fw-bold bg-dark text-white text-center">Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var topic in Model)
            {
                <tr class="text-center">

                    <td>@topic.Name</td>
                    @* <td><a asp-controller="Topic" asp-action="Details" asp-route-id="@topic.Id"><i class="fas fa-eye"></i></a></td> *@
                    <td><a asp-controller="Topic" asp-action="Edit" asp-route-id="@topic.Id"><i class="fas fa-edit"></i></a></td>
                    <td><a asp-controller="Topic" asp-action="Delete" asp-route-id="@topic.Id"><i class="fas fa-trash"></i></a></td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning text-Center">
        <h1>No Courses</h1>
    </div>
}
